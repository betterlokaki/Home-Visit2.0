{
  "service1": {
    "url": "http://service1.localhost:3001",
    "endpoint": "/service1/current-status",
    "geometryOuterKey": "geometries",
    "geometryInnerKey": "wkt",
    "siteNameKey": "siteNames",
    "timeRangeOuterKey": "timeRange",
    "timeRangeInnerKey": "dates",
    "responseKey": "sites",
    "headers": {
      "Content-Type": "application/json",
      "X-Custom-Header": "value"
    }
  },
  "service2": {
    "url": "http://service2.localhost:3002",
    "geometryOuterKey": "geometry",
    "geometryInnerKey": "wkt",
    "secondsOuterKey": "timeframes",
    "secondsInnerKey": "refreshSeconds",
    "responseKey": "history",
    "headers": {
      "Content-Type": "application/json",
      "X-Custom-Header": "value"
    }
  },
  "cache": {
    "ttlSeconds": 300,
    "refreshThresholdPercentage": 0.8,
    "maxConcurrentRefreshes": 3
  },
  "map": {
    "mapStyle": "https://demotiles.maplibre.org/style.json",
    "styleJson": {
      "version": 8,
      "sources": {
        "osm": {
          "type": "raster",
          "tiles": [
            "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
          ],
          "tileSize": 256,
          "attribution": "Â© OpenStreetMap contributors"
        }
      },
      "layers": [
        {
          "id": "osm-layer",
          "type": "raster",
          "source": "osm",
          "minzoom": 0,
          "maxzoom": 22
        }
      ],
      "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
      "sprite": "https://demotiles.maplibre.org/sprites/osm-liberty"
    },
    "flyToZoom": 15
  },
  "database": {
    "url": "postgresql://homevisit:homevisit_password@localhost:5432/homevisit_db"
  },
  "backend": {
    "port": 3001
  },
  "frontend": {
    "host": "localhost",
    "port": 5173,
    "allowedHosts": ["localhost", "127.0.0.1"],
    "apiBaseUrl": "http://localhost:3001/api"
  },
  "logging": {
    "level": "info",
    "file": {
      "path": "logs/app.log",
      "maxSize": "20m",
      "maxFiles": 14
    },
    "elasticsearch": {
      "url": "http://localhost:9200",
      "index": "home-visit-logs",
      "auth": {
        "username": "elastic",
        "password": "changeme"
      }
    }
  }
}

